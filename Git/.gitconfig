[color]
	ui = auto
[user]
	name = Simba
	email = yucb@shinemo.com
[core]
	editor = vim
	autocrlf = input
	excludesfile = /Users/simba/.gitignore
[alias]
	st = status
	cp = cherry-pick
	co = checkout
	ci = commit
	br = branch

[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[push]
	default = simple
[merge]
	tool = kdiff3
